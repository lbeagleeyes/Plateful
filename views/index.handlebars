<!-- Search bar -->
<form id="search">
  <div class="row">
    <div class="input-field inline col s9">
      <input type="text" id="ingredients" class="autocomplete">
      <label for="ingredients" id="text">Add the ingredients, and we'll provide you with tailored recipes!</label>
      <span class="helper-text" data-error="wrong" data-success="right">chicken, eggs, rice, etc.</span>
    </div>
    <div class="col s3">
      <button class="btn waves-effect cyan darken-2" id="search-button" type="submit" name="action"
        onclick="search()"><i class="material-icons">search</i>SEARCH</button>
    </div>
  </div>

  <div class="row">
    <div class="col s12" id="buttons-view">
      <!-- Ingredient buttons go here -->
    </div>

  </div>
  
</form>

<!-- Recipe results and calendar titles -->
<div class="row" id="headers">
  <div class="col s4">
    <h6>Recipe Results</h6>
    <hr><br>
  </div>
  <div class="col s7 push-s1">
    <h6>Calendar</h6>
    <hr><br>
  </div>
</div>

<!-- Recipe results and calendar -->
<!-- Recipe results-->
<div class="row">
  <div class="col s4">
    <div class="container" id="recipes">

    </div>
  </div>

  <!-- Calendar-->
  <div class="col s7 push-s1" id="calendar">
    <div class="row" id="days">
    </div>

    <div class="row" id="breakfast">
    </div>

    <div class="row" id="lunch">
    </div>

    <div class="row" id="dinner">
    </div>
  </div>
</div>
</div>
